
#pragma kernel ColorMain

RWTexture2D<float4> ColorMap;
StructuredBuffer<int> ColorBuffer;

[numthreads(8,8,1)]
void ColorMain (uint3 id : SV_DispatchThreadID)
{
    uint i=id.x+id.y*640;

    float4 color = (uint4(ColorBuffer[i]>>8, ColorBuffer[i]>>16, ColorBuffer[i]>>24, 255) & 0xffU) / 255.0;
    //ColorMap[id.xy]=lerp(color,1,0.1);
    ColorMap[id.xy]=color;
}
